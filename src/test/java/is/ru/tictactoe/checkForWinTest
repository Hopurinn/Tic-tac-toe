public class CheckForWinTest {
	public void main(String args[]) {
		org.junit.runner.JUnitCore.main("is.ru.tictactoe.BoardTest");
	}

	@Test
	public void CheckForWinTest() {
		assertEquals(true, checkForWin("0,1,2"));
	}
        @Test
	public void checkRowsForWin() {
		assertEquals(true, checkRowsForWin("0,1,2"));
	}
       @Test
	public void checkColumnsForWin(){
		assertEquals(true, checkColumnsForWin("0,3,6"));
	}
       @Test
	public void checkDiagonalsForWin(){
		assertEquals(true, checkDiagonalsForWin("0,4,8"));
	}
}

